<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/recipeImageView"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/recipeTextTitle"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_weight="0.41" />

                <CheckBox
                    android:layout_width="31dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/favorite"
                    android:button="@drawable/favorite" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/ingredientsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/textIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:transcriptMode="alwaysScroll"
            android:listSelector="@android:color/transparent">
        </ListView>

        <Button
            android:text="@string/move_to_list"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/move_to_list" />

        <TextView
            android:id="@+id/stepsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/layoutSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:textSize="16sp" />


    </LinearLayout>

</ScrollView>